{
  "name": "__MSG_l10nName__",
  "description": "__MSG_l10nDescription__",
  "version": "0.0.1",
  "manifest_version": 2,
  "homepage_url": "https://blog.marketto.it",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["bg/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Record Ajax",
    "default_popup": "menu/menu.html"
  },
  "permissions": [
    "contextMenus",
    "declarativeContent",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}